            <!--Checkout Area Strat-->

            <div class="checkout-area pt-60 pb-30">
                <div class="container">
                    <div class="row">
                        <div class="col-12">


                            <div class="coupon-accordion">
                                <!--Accordion Start-->
                                <h3>vous n'êtes pas connecté <span id="showlogin">Se connecter</span></h3>
