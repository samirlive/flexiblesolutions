                                </div>
                                <!--Accordion End-->
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-7 col-12">
                            <form class="form-js-validations" action="#">
                                <div class="checkbox-form">
                                    <h3>Details de facturation</h3>
                                    <div  class="row">
                                            <div class="col-md-12 d-none">
                                                <div class="country-select clearfix">
                                                    <label>Pays <span class="required">*</span></label>
                                                    <select class="nice-select wide">
                                                      <option data-display="Bangladesh">Maroc</option>
                                                      <option value="uk">London</option>
                                                      <option value="rou">Romania</option>
                                                      <option value="fr">French</option>
                                                      <option value="de">Germany</option>
                                                      <option value="aus">Australia</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="checkout-form-list">
                                                    <label>Prénom <span class="required">*</span></label>
                                                    <input name="firstName" required placeholder="" type="text">
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="checkout-form-list">
                                                    <label>Nom <span class="required">*</span></label>
                                                    <input name="lastName" required placeholder="" type="text">
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="checkout-form-list">
                                                    <label>Nom d'entreprise</label>
                                                    <input name="companyName"  placeholder="" type="text">
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="checkout-form-list">
                                                    <label>Ville <span class="required">*</span></label>
                                                    <input required  name="city" type="text">
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="checkout-form-list">
                                                    <label>Adresse<span class="required">*</span></label>
                                                    <input name="address" required placeholder="Street Adresse" type="text">
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="checkout-form-list">
                                                <label>&nbsp;</label>
                                                    <input  name="addressComplement" placeholder="Apartment, suite, unit etc. (optional)" type="text">
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="checkout-form-list">
                                                    <label>Secteur <span class="required">*</span></label>
                                                    <input name="department" required placeholder="" type="text">
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="checkout-form-list">
                                                    <label>Code postal / Zip <span class="required">*</span></label>
                                                    <input name="postcode" required placeholder="" type="text">
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="checkout-form-list">
                                                    <label>Email Adresse<span class="required">*</span></label>
                                                    <input name="email" required placeholder="" type="email">
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="checkout-form-list">
                                                    <label>Tel  <span class="required">*</span></label>
                                                    <input name="tel" required type="text">
                                                </div>
                                            </div>
                                        </div>
                                    <div class="different-Adresse">
                                        <div class="ship-different-title">
                                            <h3>
                                                <label>Expédier à une adresse différente ?</label>
                                                <input id="ship-box" type="checkbox">
                                            </h3>
                                        </div>
                                        <div id="ship-box-info" class="row">
                                            <div class="col-md-12 d-none">
                                                <div class="country-select clearfix">
                                                    <label>Pays <span class="required">*</span></label>
                                                    <select class="nice-select wide">
                                                      <option data-display="Bangladesh">Maroc</option>
                                                      <option value="uk">London</option>
                                                      <option value="rou">Romania</option>
                                                      <option value="fr">French</option>
                                                      <option value="de">Germany</option>
                                                      <option value="aus">Australia</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="checkout-form-list">
                                                    <label>Prénom <span class="required">*</span></label>
                                                    <input name="second_firstName" placeholder="" type="text">
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="checkout-form-list">
                                                    <label>Nom <span class="required">*</span></label>
                                                    <input name="second_lastName" placeholder="" type="text">
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="checkout-form-list">
                                                    <label>Nom d'entreprise</label>
                                                    <input name="second_companyName" placeholder="" type="text">
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="checkout-form-list">
                                                    <label>Adresse<span class="required">*</span></label>
                                                    <input name="second_address" placeholder="Street Adresse" type="text">
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="checkout-form-list">
                                                    <input  name="second_addressComplement" placeholder="Apartment, suite, unit etc. (optional)" type="text">
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="checkout-form-list">
                                                    <label>Ville <span class="required">*</span></label>
                                                    <input  name="second_city" type="text">
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="checkout-form-list">
                                                    <label>Secteur <span class="required">*</span></label>
                                                    <input name="second_department" placeholder="" type="text">
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="checkout-form-list">
                                                    <label>Code postal / Zip <span class="required">*</span></label>
                                                    <input name="second_postcode" placeholder="" type="text">
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="checkout-form-list">
                                                    <label>Email Adresse<span class="required">*</span></label>
                                                    <input name="second_email" placeholder="" type="email">
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="checkout-form-list">
                                                    <label>Tel  <span class="required">*</span></label>
                                                    <input name="second_tel" type="text">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="order-notes">
                                            <div class="checkout-form-list">
                                                <label>Commentaire</label>
                                                <textarea id="checkout-mess" cols="30" rows="10" name="comment" placeholder="Ajouter un commentaire"></textarea>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="col-lg-5 col-12">
                            <div class="your-order">
                                <h3>Votre commande</h3>
                                <div class="your-order-table table-responsive">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th class="cart-product-name">Produit</th>
                                                <th class="cart-product-total">Totale</th>
                                            </tr>
                                        </thead>
                                        <tbody class="cart-checkout">

 
                                        </tbody>
                                        <tfoot>
                                            <tr class="cart-subtotal">
                                                <th>Sous total</th>
                                                <td><span class="amount total-checkout">0,00 MAD </span></td>
                                            </tr>
                                            <tr class="order-total">
                                                <th>Montant á payer</th>
                                                <td><strong><span class="amount total-checkout">0,00 MAD</span></strong></td>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div>
                                <div class="payment-method">
                                    <div class="payment-accordion">
                                        <div id="accordion">

                                        {% for singlePaymentMethod in paymentMethods %}
                                            <div class="card">
                                            <div class="card-header" id="#payment-{{singlePaymentMethod.id}}">
                                              <h5 class="panel-title">
                                                <a class="" data-toggle="collapse" data-target="#collapse{{singlePaymentMethod.id}}" aria-expanded="true" aria-controls="collapseOne">
                                                  {{singlePaymentMethod.name}}
                                                </a>
                                              </h5>
                                            </div>
                                            <div id="collapse{{singlePaymentMethod.id}}" class="collapse" data-parent="#accordion">
                                              <div class="card-body">
                                                <p>{{singlePaymentMethod.description}}</p>
                                              </div>
                                            </div>
                                          </div>
                                        {% endfor %}

                                        </div>
                                        <div class="order-button-payment">
                                            <input value="Terminer la commander" id="checkout-btn" type="submit">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--Checkout Area End-->

        </div>
        <!-- Body Wrapper End Here -->

            <!-- IF CART IS EMPTY -->
            <div class="cart-is-empty d-none">
                <div class="p-4 text-center  ">

                    <h1>Votre panier est vide !</h1>
                    <h4>Pensez á ajouter des articles pour continuer</h4>
                    <p></p>

                    <img style="width:250px;margin-top:20px;" src="https://image.flaticon.com/icons/png/512/102/102661.png"  />

                    </div>
                </div>
             <!-- IF CART IS EMPTY -->
{% endblock %}


        {% block javascripts %}
            {{parent()}}


            <script>
                $(document).ready(function(){

                    if(cartLS.list().length == 0){
                        $(".checkout-area").html($(".cart-is-empty").html());
                    }


                    




                    $("#checkout-btn").click(function(){


                            jQuery.validator.setDefaults({
                            debug: true,
                            success: "valid"
                            });


                            
                            var form = $( ".form-js-validations" );
                            form.validate({
                            
                             lang: 'fr'
                            });
                            $( "#checkout-btn" ).click(function() {
                            alert( "Valid: " + form.valid() );
                            });
                        if(form.valid()){
                            $.ajax({
                            url:"{{path('confirm_checkout_ajax')}}",
                            data:{
                                firstName:$("input[name='firstName']").val(),
                                lastName:$("input[name='lastName']").val(),
                                companyName:$("input[name='companyName']").val(),
                                address:$("input[name='address']").val(),
                                city:$("input[name='city']").val(),
                                country:'Maroc',
                                department:$("input[name='department']").val(),
                                postcode:$("input[name='postcode']").val(),
                                email:$("input[name='email']").val(),
                                tel:$("input[name='tel']").val(),
                                comment:$("textarea[name='comment']").val(),
                                orderItems:cartLS.list()
                            },

                            success:function(result){
                                $(".checkout-area").html(result);
                                cartLS.destroy();
                            }
                        });
                        }
                        


                    });
                });
            </script>
        {% endblock %}