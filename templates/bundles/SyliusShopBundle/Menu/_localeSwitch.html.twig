{% if locales|length > 1 %}

            {% for code in locales %}
                {% if code is not same as(active) %}
                    <a style="letter-spacing:0;"  href="{{ path('sylius_shop_switch_locale', {'code': code}) }}" class="item sylius-available-locale  vTextLR d-block" {{ sylius_test_html_attribute('available-locale') }}>
                        {{ code|sylius_locale_name }}
                    </a>
                    <br>
                {% endif %}
            {% endfor %}
        
{% endif %}
